---
import Layout from "../layouts/main.astro";
import Countdown from 'react-countdown';
---

<Layout
    title="Events"
    description="A list of all past and current SpookyJam events!"
>
    <h2>Current Events</h2>
    <p>
        SpookyJam 2022 is scheduled to take place in October 2022! Check back
        later for more information or join our Discord to keep up with the
        latest information about SpookyJam and our other events!
    </p>

    <Countdown client:only = 'react' date={Date.UTC(2022, 9, 1, 0, 0, 0)} />

    <h2>Past Events</h2>
    <ul>
        <li><a href="/2021">2021</a></li>
        <li><a href="/2020">2020</a></li>
        <li><a href="/2019">2019</a></li>
        <li><a href="/2018">2018</a></li>
        <li><a href="/2017">2017</a></li>
    </ul>
</Layout>
